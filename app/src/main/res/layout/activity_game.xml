<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="evilmultinationalcorp.hangman.GameActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="156dp"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_weight="1"
        android:id="@+id/hangman"
        android:src="@drawable/hangman"
        android:layout_width="fill_parent"
        android:layout_height="160dp" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="156dp"
        android:orientation="vertical"
        >

    <TextView android:layout_weight="1"
        android:text="total words:"
        android:textSize="5pt"
        android:id="@+id/totalWordsText"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:columnWidth="50dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"></TextView>

        <TextView android:layout_weight="1"
            android:text="5"
            android:textSize="10pt"
            android:id="@+id/totalWords"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:columnWidth="50dp"
            android:gravity="center"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"></TextView>


        <TextView android:layout_weight="1"
        android:text="words done:"
        android:textSize="5pt"
        android:id="@+id/wordsPlayedText"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:columnWidth="50dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"></TextView>

        <TextView android:layout_weight="1"
            android:text="2"
            android:textSize="10pt"
            android:id="@+id/wordsPlayed"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:columnWidth="50dp"
            android:gravity="center"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"></TextView>

        <TextView android:layout_weight="1"
            android:text="Words failed :"
            android:textSize="5pt"
            android:id="@+id/wordsfailedText"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:columnWidth="50dp"
            android:gravity="center"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"></TextView>

        <TextView android:layout_weight="1"
            android:text="2"
            android:textSize="10pt"
            android:id="@+id/wordsFailed"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:columnWidth="50dp"
            android:gravity="center"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"></TextView>


    </LinearLayout>
</LinearLayout>



    <TextView android:layout_weight="1"

        android:textSize="15pt"
        android:id="@+id/result"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:columnWidth="50dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"></TextView>


    <GridView android:layout_weight="1"
        android:id="@+id/alphabet"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:columnWidth="50dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"></GridView>

</LinearLayout>
